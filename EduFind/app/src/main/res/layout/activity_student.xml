<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="codebrains.edufind.Fragments.BookSearchFragment"
    android:background="@color/colorPrimaryDark">

    <ExpandableListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/listView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/relativeLayout" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/ic_search_category_default"
        app:backgroundTint="@color/yellowish"
        android:onClick="BookSortingProcess"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="80dp"
        android:src="@android:drawable/ic_menu_rotate"
        app:backgroundTint="@color/turquoise"
        android:onClick="RefreshSearchBooksList"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="18dp"
        android:src="@android:drawable/ic_menu_mapmode"
        app:backgroundTint="@color/turquoise"
        android:onClick="OpenGoogleMaps"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="top|end"
        android:onClick="OpenInformationWebPage"
        android:src="@android:drawable/ic_dialog_info"
        app:backgroundTint="@color/yellowish" />

</android.support.design.widget.CoordinatorLayout>
